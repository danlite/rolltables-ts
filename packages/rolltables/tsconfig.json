{
  "compilerOptions": {
    "declarationDir": "./dist",
    "outDir": "./dist",
    "lib": ["es2019"],
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}
